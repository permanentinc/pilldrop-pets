      <p class="colour--red"><b>Cats</b></p>
      <img src="{{ 'mini-cat.png' | asset_url }}" width="140" height="140" loading="lazy" />
    </a>

    <a href="/collections/dogs" class="filter__wrap__item [ js-filter-collections ] {% if collection.title == 'Dogs' %}active{% endif %}" data-id="Dogs">
      <p class="colour--red"><b>Dogs</b></p>
      <img src="{{ 'mini-dog.png' | asset_url }}" width="140" height="140" loading="lazy" />
    </a>

    <a href="/collections/horses" class="filter__wrap__item [ js-filter-collections ] {% if collection.title == 'Horses' %}active{% endif %}" data-id="Horses">
