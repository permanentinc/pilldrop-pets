  <span class="filter-icon">
      <b><i></i></b>
      <b><i></i></b>
      <b><i></i></b>
  </span>
</a>

{% comment %}
  Product grid
{% endcomment %}

<div class="collection">


            
  {% comment %}
    Product Filters
  {% endcomment %}
  <div class="collection__filters">

    <a href="#" class="collection__filters__toggle" onclick="event.preventDefault();document.body.classList.toggle('filters-active')">
      <span><svg xmlns="http://www.w3.org/2000/svg" width="15" height="11" viewBox="0 0 15 11"><polygon fill="#000" fill-rule="evenodd" points="14.7 4.776 3.12 4.776 6.652 1.245 5.502 .095 0 5.597 5.502 11.1 6.652 9.95 3.12 6.419 14.7 6.419"/></svg> CLOSE<span>
    </a>

    <h4 class="colour--red">Shop by...</h4>
    
    <h6 class="collection__filters__title">Condition</h6>

    {% comment %} <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="All" id="All">
      <label for="All">All</label>
    </p> {% endcomment %}
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Skin and Allergy" id="Skin and Allergy">
      <label for="Skin and Allergy">Skin and Allergy</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Skin" id="Skin">
      <label for="Skin">Skin</label>
    </p>
    {% comment %} <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Dogs" id="Dogs">
      <label for="Dogs">Dogs</label>
    </p> {% endcomment %}
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Cardiac" id="Cardiac">
      <label for="Cardiac">Cardiac</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Diabetes" id="Diabetes">
      <label for="Diabetes">Diabetes</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Behavioural" id="Behavioural">
      <label for="Behavioural">Behavioural</label>
    </p>
    {% comment %} <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Cats" id="Cats">
      <label for="Cats">Cats</label>
    </p> {% endcomment %}
    {% comment %} <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Horses" id="Horses">
      <label for="Horses">Horses</label>
    </p> {% endcomment %}
    {% comment %} <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Most Popular" id="Most Popular">
      <label for="Most Popular">Most Popular</label>
    </p> {% endcomment %}
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Most PopularPain and Anti-inflammatory" id="Most PopularPain and Anti-inflammatory">
      <label for="Most PopularPain and Anti-inflammatory">Most PopularPain and Anti-inflammatory</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Hyperthyroidism" id="Hyperthyroidism">
      <label for="Hyperthyroidism">Hyperthyroidism</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Eye Health" id="Eye Health">
      <label for="Eye Health">Eye Health</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-tags ]" value="Seizure" id="Seizure">
      <label for="Seizure">Seizure</label>
    </p>


    <br>
    <br>


    <h6 class="collection__filters__title">Manufacturers</h6>


    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Dechra" id="Dechra">
      <label for="Dechra">Dechra</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="MSD Animal Health" id="MSD Animal Health">
      <label for="MSD Animal Health">MSD Animal Health</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Elanco" id="Elanco">
      <label for="Elanco">Elanco</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Lantus" id="Lantus">
      <label for="Lantus">Lantus</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Dermcare" id="Dermcare">
      <label for="Dermcare">Dermcare</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Boehringer Ingelheim" id="Boehringer Ingelheim">
      <label for="Boehringer Ingelheim">Boehringer Ingelheim</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Bayer" id="Bayer">
      <label for="Bayer">Bayer</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Vetoquinol" id="Vetoquinol">
      <label for="Vetoquinol">Vetoquinol</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Chanelle" id="Chanelle">
      <label for="Chanelle">Chanelle</label>
    </p>
    <p class="collection__filters__item">
      <input type="checkbox" class="[ js-filter-brands ]" value="Zoetis" id="Zoetis">
      <label for="Zoetis">Zoetis</label>
    </p>

  
  </div>


  {% comment %}
    Product grid
  {% endcomment %}
  <div class="collection__grid">


    <div class="loader">
      <div id="loader">
      <div id="shadow"></div>
      <div id="box"></div>
    </div>

  </div>

    {% for product in collections['all'].products %}

      {% assign on_sale = false %}
      {% if product.compare_at_price > product.price %}
      {%- assign on_sale = true -%}
      {% endif %}

      <div class="collection__grid__item" data-tags="{% for tag in product.tags %}{{ tag }},{% endfor %}" data-collections="{% for collection in product.collections %}{{ collection.title }},{% endfor %}" data-brand="{{ product.vendor }}">
        {% if product.media[0] %}
        <a  href="{{ product.url }}" class="collection__grid__item__image">
          
          
          <img loading="lazy"
            srcset="{{ product.media[0] | image_url: width: 480 }} 480w,
                    {{ product.media[0] | image_url: width: 800 }} 800w,
                    {{ product.media[0] | image_url: width: 1920 }} 1600w,"
            sizes="(max-width: 600px) 480px,
                   (max-width: 1000px) 800px,
                   1000px"
            src="{{ product.media[0] | image_url: width: 1920 }}"
            alt="{{ product.media[0].alt | escape }}"
            width="{{ product.media[0].width }}"
            height="{{ product.media[0].height }}">


          {% if on_sale %}
            <span class="collection__grid__item__image__sale">WHY PAY {{ product.compare_at_price | money }} ?</span>
          {% endif %}

          {% if product.available %}
          {% else %}
            <span class="collection__grid__item__image__unavailable">SOLD OUT</span>
          {% endif %}

        </a>
      {% else %}
      <a  href="{{ product.url }}" class="collection__grid__item__image">
        <img loading="lazy" src="https://cdn.shopify.com/s/files/1/0617/3982/7386/products/RX_780b8dd4-821b-426c-9a6b-a4e2b3fc1c18.jpg" class="placeholder">



        {% if on_sale %}
          <span class="collection__grid__item__image__sale">WHY PAY {{ product.compare_at_price | money }} ?</span>
        {% endif %}

        {% if product.available %}
        {% else %}
          <span class="collection__grid__item__image__unavailable">SOLD OUT</span>
        {% endif %}

      </a>
      {% endif %}

      <a href="{{ product.url }}" class="collection__grid__item__details">
        <div class="collection__grid__item__details__title">
          {% comment %} <h6 class="colour--text" >{{ product.vendor }}</h6> {% endcomment %}
          <h6 class="colour--red" ><strong>{{ product.title | escape }} &nbsp;</strong></h6>
          <p style="color:#212121;">{{ product.price | money }}</p>
        </div>
      </a>
    </div>

    {% endfor %}
    
  </div>
</div>

