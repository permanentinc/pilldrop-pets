{% comment %}
  Awards
{% endcomment %}

<div class="awards icon--{{ section.id }}">
  <div class="awards__wrap">
    <div class="awards__feature">
      <img
        loading="lazy"
        src="{{ section.settings.feature | image_url: width: 580 }}"
        alt="{{ section.settings.feature.alt | escape }}"
        width="580"
        height="722"
      >
    </div>

    <div class="awards__grid">
      <div class="awards__item">
        <img
          loading="lazy"
          src="{{ section.settings.image1 | image_url: width: 600 }}"
          alt="{{ section.settings.image1.alt | escape }}"
          width="600"
          height="245"
        >
      </div>
      <div class="awards__item">
        <img
          loading="lazy"
          src="{{ section.settings.image2 | image_url: width: 600 }}"
          alt="{{ section.settings.image2.alt | escape }}"
          width="600"
          height="245"
        >
      </div>
      <div class="awards__item">
        <img
          loading="lazy"
          src="{{ section.settings.image3 | image_url: width: 600 }}"
          alt="{{ section.settings.image3.alt | escape }}"
          width="600"
          height="245"
        >
      </div>
      <div class="awards__item">
        <img
          loading="lazy"
          src="{{ section.settings.image4 | image_url: width: 600 }}"
          alt="{{ section.settings.image4.alt | escape }}"
          width="600"
          height="245"
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "awards",
  "settings": [
    {
      "type": "image_picker",
      "id": "feature",
      "label": "Feature Image"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Image 4"
    }
  ],
  "presets": [
    {
      "name": "awards"
    }
  ]
}
{% endschema %}
